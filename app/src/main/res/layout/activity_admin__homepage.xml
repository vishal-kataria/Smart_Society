<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/socitylay"
    tools:context=".Admin_Homepage">

    <Button
        android:layout_width="120dp"
        android:layout_height="105dp"
        android:text="Users"
        android:id="@+id/d1"
        android:layout_marginRight="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:textColor="#ffffff"
        android:paddingTop="25dp"
        android:background="@color/colorPrimary"
        android:drawableTop="@drawable/ic_local_library_black_24dp"
        android:layout_marginTop="100dp"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="105dp"
        android:text=" Society        Notice"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:drawableTop="@drawable/ic_assignment_black_24dp"
        android:textColor="#ffffff"
        android:id="@+id/p1"
        android:paddingTop="25dp"
        android:layout_marginTop="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="105dp"
        android:paddingTop="25dp"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="25dp"
        android:drawableTop="@drawable/ic_group_black_24dp"
        android:layout_below="@+id/d1"
        android:layout_marginTop="30dp"
        android:id="@+id/s1"
        android:text="Arrange meeting"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="105dp"
        android:paddingTop="25dp"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/p1"
        android:layout_marginTop="30dp"
        android:drawableTop="@drawable/ic_receipt_black_24dp"
        android:id="@+id/m1"
        android:text="Maintenance Bill"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="105dp"
        android:paddingTop="25dp"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="25dp"
        android:drawableTop="@drawable/ic_feedback_black_24dp"
        android:layout_below="@+id/s1"
        android:layout_marginTop="30dp"
        android:id="@+id/s2"
        android:text="User Complaints"/>


</RelativeLayout>