<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Admin_edit_maintenance">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lay1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ls"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <Spinner
                    android:layout_width="261dp"
                    android:layout_height="match_parent"
                    android:id="@+id/spinner"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/grad"
                    android:layout_weight="1"></Spinner>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fetch"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:background="@color/colorPrimary"
                    android:textColor="#ffffff"
                    android:id="@+id/btn1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lr"
                android:layout_below="@+id/ls"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <Spinner
                    android:layout_width="261dp"
                    android:layout_height="match_parent"
                    android:id="@+id/spinner1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/grad"
                    android:layout_weight="1"></Spinner>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fetch"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:background="@color/colorPrimary"
                    android:textColor="#ffffff"
                    android:id="@+id/btn2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/lr"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/st1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@drawable/grad"
                    android:textColorHint="@color/colorPrimary"
                    android:layout_margin="5dp"
                    android:layout_marginTop="5dp"
                    android:hint="Name"
                    >

                    <requestFocus />
                </EditText>



                <EditText
                    android:id="@+id/st3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grad"
                    android:layout_margin="5dp"
                    android:textColorHint="@color/colorPrimary"
                    android:ems="10"
                    android:hint="Flat no"
                    />
                <EditText
                    android:id="@+id/st2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grad"
                    android:layout_margin="5dp"
                    android:textColorHint="@color/colorPrimary"
                    android:ems="10"
                    android:hint="Parking" />
                <EditText
                    android:id="@+id/st4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grad"
                    android:layout_margin="5dp"
                    android:textColorHint="@color/colorPrimary"
                    android:ems="10"
                    android:hint="Maintenance Amount"
                    />
                <EditText
                    android:id="@+id/st5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grad"
                    android:layout_margin="5dp"
                    android:textColorHint="@color/colorPrimary"
                    android:ems="10"
                    android:hint="Penalty"
                    />
                <EditText
                    android:id="@+id/st6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grad"
                    android:layout_margin="5dp"
                    android:textColorHint="@color/colorPrimary"
                    android:ems="10"
                    android:hint="Maintenance month"
                    />
                <EditText
                    android:id="@+id/st7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grad"
                    android:layout_margin="5dp"
                    android:textColorHint="@color/colorPrimary"
                    android:ems="10"
                    android:hint="Paid"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll"
                android:layout_margin="5dp"
                android:id="@+id/f"
                android:gravity="center_horizontal"
                >

                <Button
                    android:id="@+id/viewallbtn1"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:background="@color/colorPrimary"
                    android:textColor="#ffffff"
                    android:layout_margin="5dp"
                    android:text="View  Bills" />


                <ToggleButton
                    android:id="@+id/maintenance"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:layout_margin="5dp"
                    android:background="@color/colorPrimary"
                    android:textColor="#ffffff"

                    android:text="Paid/unpaid " />



            </LinearLayout>
            <Button
                android:id="@+id/modifybtn1"
                android:layout_width="250dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/f"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:text="Modify Bill" />

        </RelativeLayout>
    </ScrollView>




</LinearLayout>