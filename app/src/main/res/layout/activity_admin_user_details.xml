<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Admin_user_details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lay1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ls"
            android:layout_marginTop="10dp"
            android:weightSum="2">

            <Spinner
                android:layout_width="261dp"
                android:layout_height="match_parent"
                android:id="@+id/spinner"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/grad"
                android:layout_weight="1"></Spinner>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fetch"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:id="@+id/btn1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/ls"
            android:orientation="vertical">
            <EditText
                android:id="@+id/st1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="@drawable/grad"
                android:textColorHint="@color/colorPrimary"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:hint="Name"
                >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/st2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/grad"
                android:layout_margin="5dp"
                android:textColorHint="@color/colorPrimary"
                android:ems="10"
                android:hint="Phone" />

            <EditText
                android:id="@+id/st3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/grad"
                android:layout_margin="5dp"
                android:textColorHint="@color/colorPrimary"
                android:ems="10"
                android:hint="Flat no"
                />
            <EditText
                android:id="@+id/st4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/grad"
                android:layout_margin="5dp"
                android:textColorHint="@color/colorPrimary"
                android:ems="10"
                android:hint="Parking Vehicles"
                />

        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_below="@+id/ll"
            android:layout_marginTop="5dp"
            android:layout_height="98dp" >
            <Button
                android:id="@+id/modifybtn1"
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:text="Modify" />



            <Button
                android:id="@+id/deletebtn1"
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:text="Delete" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >

        <Button
            android:id="@+id/viewallbtn1"
            android:layout_width="290dp"
            android:layout_height="90dp"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:layout_margin="5dp"
            android:text="View all Users" />



    </LinearLayout>




</LinearLayout>